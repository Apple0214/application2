<div class="row">
<div class="col-md-6 col-md-offset-3">

<h1>Editing Book</h1>
<% if @book.errors.any? %>
	<h3><%= @book.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<%= form_for(@book) do |f| %>
<div class="field row">
 <h3>Title</h3>
<%= f.text_field :title %>
</div>
<div class="field row">
<h3>Opinion</h3>
<%= f.text_field :body %>
</div>
 <div class="actions row">
<%= f.submit 'Update Book' %>
</div>
<%= link_to "Show", @book, class: "book_#{@book.id}" %>
<%= link_to "Back", books_path, class: "back" %>

</div>
<% end %>
<div class="col-md-3"></div>

</div>